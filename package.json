{
  "name": "nodejs-api",
  "version": "0.0.0",
  "description": "Node.js Sample API",
  "author": "Igor Gassmann <igor@igassmann.me> (https://igassmann.me)",
  "private": true,
  "scripts": {
    "dev": "tsnd --respawn --inspect -- ./src/main.ts",
    "dev:gui": "ndb tsnd --respawn -- ./src/main.ts",
    "build": "tsc",
    "start": "node dist/main",
    "format": "prettier \"**/*.{ts,js,json,md,yml,html,css,scss}\" --ignore-path ./.gitignore --write",
    "lint": "eslint \"**/*.{js,ts}\" --ignore-path ./.gitignore --fix",
    "test": "jest",
    "test:unit": "yarn test ./src",
    "test:cov": "yarn test --coverage",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "@nestjs/cli": "^7.1.2",
    "@nestjs/common": "^7.2.0",
    "@nestjs/core": "^7.2.0",
    "@nestjs/cqrs": "^7.0.0",
    "@nestjs/platform-express": "^7.2.0",
    "@nestjsplus/config": "^1.0.14",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "express": "^4.17.1",
    "mongodb": "^3.2.4",
    "nest-mongodb": "^6.1.0",
    "pluralize": "^8.0.0",
    "qs": "^6.9.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.5.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nestjs/testing": "^7.3.2",
    "@types/jest": "^26.0.4",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^12.19.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "ndb": "^1.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^4.1.2",
    "yarnhook": "^0.5.1"
  },
  "engines": {
    "node": "^12.19.8",
    "yarn": "^1.16.0"
  }
}
